    //Ejercicio 13:
        double [] array_precios={11.5 ,12, 15.5,17.7};
        
        System.out.println("los precios son:");
        mostrar_precios(array_precios, 0); //llamada directa a la funcion con un valor de inicio de index ( 0 ) 
    
    
    
    
    
    
     
     
    }   
    public static void mostrar_precios(double[] array,int index){ //creacion de la funcion recursiva que returna void, ningun valor, solo muestra
        if (index == array.length) {
            return;
        }
        
        System.out.println("El precio es: "+array[index] );//aca mostramos por pantalla el array con su indice[ index ]
        mostrar_precios(array,index+1); //aca hacemos la recursividad, que index sume +1 en cada vuelta.
    }
    
}